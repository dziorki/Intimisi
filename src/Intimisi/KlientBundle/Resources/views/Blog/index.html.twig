{% extends "::base.html.twig" %} 
{% block content %}

{% include '::menu.html.twig' %}

<h1>Blog list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Url</th>
            <th>Status</th>
            <th>Category</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('blog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ (entity.status == 1 ? 'Tak' : 'Nie') }}</td>
            <td>{{ entity.categoryid.name }}</td>
            <td>{{ entity.userid.username }}</td>

            <td>
                <ul>
                    <li>
                        <a href="{{ path('blog_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('blog_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('blog_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
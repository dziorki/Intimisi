{% extends "::base.html.twig" %} 
{% block content %}

<div class="title"><h5>Portfel inwestycyjny</h5></div>


<form action="{{ path('ulubieni_create') }}" method="post" {{ form_enctype(form) }} class="mainForm">
    <fieldset>
        <div class="widget">
            <div class="head">
                <h5 class="iUser2">Dodawanie ulubionego</h5>
            </div>
                
            <div class="rowElem noborder">
                <label>{{ form_label(form.opis) }}</label>
                <div class="formRight">
                    {{ form_widget(form.opis) }}
                </div>                        
                <div class="fix"></div>
            </div>
            <div class="rowElem searchDrop">
                <label>Nazwa u≈ºytkownika:</label>
                <div class="formRight">
                    {{ form_widget(form.ulubiony_id) }}
                </div>                        
                <div class="fix"></div>
            </div>
            {{ form_widget(form) }} 
            <div class="submitForm">
                <button type="submit" class="greyishBtn">Dodaj</button>
            </div>
            <div class="fix"></div>
        </div>
    </fieldset>  
</form>

{% endblock %}
